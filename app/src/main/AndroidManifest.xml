        <!--关于-->
        <activity
            android:name=".activity.AboutActivity"
            android:screenOrientation="portrait" />

        <!--我的主页-->
        <activity
            android:name=".activity.ProfileHomePageActivity"
            android:screenOrientation="portrait" />

        <!--观看记录-->
        <activity
            android:name=".activity.WatchHistoryActivity"
            android:screenOrientation="portrait" />

        <!--视频详情页面-->
        <activity
            android:name=".activity.VideoDetailActivity"
            android:screenOrientation="portrait" />

        <!--具体到每一个分类的列表活动-->
        <activity
            android:name=".activity.CategoryListActivity"
            android:screenOrientation="portrait" />

    </application>
</manifest>