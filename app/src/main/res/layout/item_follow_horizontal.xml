<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/common_10dp"
    android:paddingBottom="@dimen/common_10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_cover_feed"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginEnd="@dimen/common_5dp"
        android:scaleType="fitXY"
        android:src="@drawable/placeholder_banner"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_marginStart="@dimen/common_5dp"
        android:layout_marginTop="@dimen/common_10dp"
        android:textColor="@color/color_black"
        android:textSize="@dimen/common_sp_14"
        tools:text="一起健身吧少年"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_common_d"
        android:layout_marginTop="@dimen/padding_common_d"
        android:textColor="@color/color_gray"
        android:textSize="@dimen/common_sp_12"
        tools:text="#生活 / 04" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/padding_common_v"
        android:background="@color/color_division_line" />


</LinearLayout>








